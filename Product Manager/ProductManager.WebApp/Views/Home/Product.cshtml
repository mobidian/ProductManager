@model ProductManager.WebApp.Models.ProductViewModel

<div id="product">
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(p => p.Key)
        @Html.TextBoxFor(p => p.Key, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Key, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.ProductSubcategoryId)
        @{ Html.RenderPartial("ProductSubCategoryDropDown", new ViewDataDictionary()); }
        @Html.ValidationMessageFor(p => p.ProductSubcategoryId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.StockLevel)
        @Html.TextBoxFor(p => p.StockLevel, new { @class = "form-control", type = "number", min = "0" })
        @Html.ValidationMessageFor(p => p.StockLevel, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Price)
        @Html.TextBoxFor(p => p.Price, new { @class = "form-control", type = "number", min = "0", step = "any" })
        @Html.ValidationMessageFor(p => p.Price, "", new { @class = "text-danger" })
    </div>
</div>